<?xml version="1.0" encoding="utf-8"?>
<com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_margin="16dp"
    app:base_release_color="@color/colorPrimaryDark"
    app:base_press_color="@color/colorPrimaryDark"
    app:ball_release_color="@color/colorAccent"
    app:ball_press_color="@color/colorPrimaryDark"
    app:icon_release="@drawable/ic_tracking"
    app:icon_press="@drawable/ic_tracking" />